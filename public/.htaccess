# Bewerbungstrainer dist folder - Serve static assets directly
# This prevents WordPress from intercepting .js requests

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve .js files directly - don't let WordPress process them
    RewriteRule ^assets/.*\.js$ - [L]

    # Serve .css files directly
    RewriteRule ^assets/.*\.css$ - [L]
</IfModule>

# Set correct MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
</IfModule>

# Prevent directory listing
Options -Indexes
